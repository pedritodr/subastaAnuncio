{
  "name": "dnetix/redirection",
  "description": "Library to connect with PlacetoPay Redirection service",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Diego Calle",
      "email": "dnetix@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.0",
    "ext-soap": "*",
    "ext-json": "*",
    "guzzlehttp/guzzle": ">=5.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.4",
    "squizlabs/php_codesniffer": "3.*",
    "symfony/var-dumper": "^4.3"
  },
  "autoload": {
    "psr-4": {
      "Dnetix\\Redirection\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpcs": "phpcs --standard=PSR2 --exclude=Generic.Files.LineLength --ignore=tests/coverage src/ tests/"
  }
}
